{
  "$schema": "https://opencode.ai/config.json",
  "theme": "aura",
  "layout": "stretch",
  "keybinds": {
    "session_child_cycle": "<leader>+right",
    "session_child_cycle_reverse": "<leader>+left",
    "input_newline": "shift+enter",
  },
  "mode": {},
  "tools": {
    "execute_agent": false,
    "execute_tool": false,
    "list_sessions": false,
    "export_session": false
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ],
      "enabled": false
    },
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp@latest",
        "--isolated",
        "--browser",
        "chromium"
      ],
      "enabled": true
    }
  },
  "instructions": [
    "CONTRIBUTING.md",
    "CLAUDE.md",
    ".cursor/rules/*.md"
  ],
  "permission": {
    "bash": {
      "kill *": "ask",
      "pkill *": "ask",
      "gh *": "ask",
      "git status *": "allow",
      "git log*": "allow",
      "git show*": "allow",
      "git diff*": "allow",
      "git *": "ask",
      "kubectl get *": "allow",
      "kubectl describe *": "allow",
      "kubectl logs *": "allow",
      "kubectl top *": "allow",
      "kubectl api-resources *": "allow",
      "kubectl explain *": "allow",
      "kubectl version *": "allow",
      "kubectl cluster-info *": "allow",
      "kubectl wait *": "allow",
      "kubectl diff *": "allow",
      "kubectl *": "ask",
      "pyinfra *": "ask",
      "uv run pyinfra *": "ask",
      "pulumi *": "ask",
      "helm *": "ask",
      "scp *": "ask",
      "ssh *": "ask",
      "aws *": "ask",
      "az *": "ask",
      "gcp *": "ask",
      "*": "allow"
    }
  },
  "provider": {
    "homelab": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Homelab",
      "options": {
        "baseURL": "https://qwen3-coder.holdenitdown.net/v1"
      },
      "models": {
        "Qwen/Qwen3-Coder-30B-A3B-Instruct-FP8": {
          "name": "Qwen3 Coder 30B A3B",
          "options": {
            "temperature": 0.7,
            "top_p": 0.8,
            "top_k": 20,
            "repetition_penalty": 1.05
          }
        }
      }
    }
  },
  "autoshare": false,
  "autoupdate": false
}
