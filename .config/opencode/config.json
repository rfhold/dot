{
  "$schema": "https://opencode.ai/config.json",
  "theme": "user",
  "model": "anthropic/claude-sonnet-4-5-20250929",
  "layout": "stretch",
  "keybinds": {
    "input_newline": "alt+j",
    "session_child_cycle": "<leader>right",
    "session_child_cycle_reverse": "<leader>left"
  },
  "mode": {},
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ],
      "enabled": false
    },
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp@latest",
        "--isolated"
      ],
      "enabled": false
    }
  },
  "instructions": [
    "CONTRIBUTING.md",
    "CLAUDE.md",
    ".cursor/rules/*.md"
  ],
  "permission": {
    "bash": {
      "gh *": "ask",
      "git status *": "allow",
      "git *": "ask",
      "kubectl get *": "allow",
      "kubectl logs *": "allow",
      "kubectl describe *": "allow",
      "kubectl api-resources": "allow",
      "kubectl *": "ask",
      "pyinfra *": "ask",
      "uv run pyinfra *": "ask",
      "pulumi *": "ask",
      "helm *": "ask",
      "ssh *": "ask",
      "aws *": "ask",
      "az *": "ask",
      "gcp *": "ask",
      "*": "allow"
    }
  },
  "provider": {
    "homelab": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Homelab",
      "options": {
        "baseURL": "https://qwen3-coder.holdenitdown.net/v1"
      },
      "models": {
        "Qwen/Qwen3-Coder-30B-A3B-Instruct-FP8": {
          "name": "Qwen3 Coder 30B A3B",
          "options": {
            "temperature": 0.7,
            "top_p": 0.8,
            "top_k": 20,
            "repetition_penalty": 1.05,
          },
        }
      }
    },
  },
  "autoshare": false,
  "autoupdate": false
}
