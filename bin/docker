#!/usr/bin/env bash
# Docker compatibility wrapper - uses podman if available, otherwise real docker
if command -v podman &>/dev/null; then
    exec podman "$@"
elif command -v /usr/bin/docker &>/dev/null; then
    exec /usr/bin/docker "$@"
else
    echo "Error: No container engine found. Install podman or docker." >&2
    exit 1
fi
